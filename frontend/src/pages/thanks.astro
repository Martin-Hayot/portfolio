---
import { ViewTransitions } from "astro:transitions";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Thank you">
    <div
        class="flex flex-col text-center text-white justify-center items-center"
    >
        <h1 class="text-4xl">Thank you for reaching out</h1>
        <p>I will get back to you as soon as possible.</p>
        <a href="/">
            <button
                class="border-2 bg-white p-3 rounded-lg hover:bg-transparent hover:text-white text-black text-base duration-200"
                >Go back home</button
            >
        </a>
    </div>
</Layout>
