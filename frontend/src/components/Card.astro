---
import { BookOpenText } from "lucide-react";

interface Props {
    title: string;
    body: string;
    href: string;
    target?: string;
    logoSrc?: string;
    logoAlt?: string;
}

const { href, title, body, logoAlt } = Astro.props;
let { target, logoSrc } = Astro.props;
let icon;

if (!target) {
    target = "_self";
}

if (!logoSrc) {
    logoSrc = "/rocket.svg";
}

if (logoSrc == "blog") {
    icon = BookOpenText;
}
---

<li class="link-card">
    <a href={href} target={target} class="flex flex-row items-center gap-x-6">
        <div>
            {
                icon ? (
                    <BookOpenText className="w-10 h-10" />
                ) : (
                    <img class="w-10 h-10" src={logoSrc} alt={logoAlt} />
                )
            }
        </div>
        <div>
            <h2>
                {title}
                <span>&rarr;</span>
            </h2>
            <p>
                {body}
            </p>
        </div>
    </a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: #16191c;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;

        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }
    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        background-color: #16191c;
        opacity: 0.8;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }
    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }
    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }
</style>
